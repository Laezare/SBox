{% extends 'base.html.twig' %}

{% block title %}- Admin{% endblock %}
{# css en local #}
{% block stylesheet %}{% endblock %}
{# js en local #}
{% block javascript %}{% endblock %}

{# Ceci est mon block #}
{% block content %}

<br>
<h1>Gestion des posts</h1>

<a href="{{ path('admin_post_add') }}" class="btn btn-primary m-5">Ajouter un post</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col" class="text-center">AFFICHE</th>
            <th scope="col" class="text-center">USER</th>
            <th scope="col" class="text-center">TITRE</th>
            <th scope="col" class="text-center">CONTENU</th>
        </tr>
    </thead>
    <tbody>
        {% for p in posts %}
        <tr style="text-align: center;">

            <td><img src="{{ asset('/photo/' ~ p.image) }}" height="80px" /></td>

            <td>{{p.user}}</td>

            <td>{{p.title}}</td>

            <td>{{p.content | slice(0,65)}}</td>

            <th><a href="{{path('show', {id : p.id}) }}"
              class="btn btn-primary" style="margin : 5px" class="fa fa-trash" style="margin : 5px; width: 5em"><i class="fas fa-eye"></i></a></th>

            <th><a href="{{ path('admin_post_update', { id : p.id} ) }}"
              class="btn btn-warning" style="margin : 5px" class="fa fa-trash" style="margin : 5px; width: 5em"><i class="fas fa-edit"></i></a></th>

            <th><a href="{{ path('admin_post_delete', { id : p.id} ) }}"
              class="btn btn-danger" style="margin : 5px" class="fa fa-trash" style="margin : 5px; width: 5em"><i class="fas fa-trash-alt"></i></a></th>

        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}


